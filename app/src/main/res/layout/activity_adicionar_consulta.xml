<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdicionarConsultaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAddCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Consulta"
            android:textAlignment="center"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCamposObrigatorios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="*Campos Obrigatórios"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvAddConPac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="*Paciente" />

                <EditText
                    android:id="@+id/etAddConPac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/tvAddConMed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Médico" />

                <EditText
                    android:id="@+id/etAddConMed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/tvAddConDatIni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Início da consulta" />


                <EditText
                    android:id="@+id/etAddConDatIni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="datetime" />

                <TextView
                    android:id="@+id/tvAddConDatfim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Final da consulta" />

                <EditText
                    android:id="@+id/etAddConDatFim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="datetime" />

                <TextView
                    android:id="@+id/tvAddConObs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Observação" />

                <EditText
                    android:id="@+id/etAddConObs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnAdicionarConsulta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Adicionar" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>